<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.pigeon.DetailsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/img_details_avatar"/>
        <TextView
            android:id="@+id/text_details_name"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="110dp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:hint="喜洋洋"
            android:gravity="center_vertical"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="220dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                android:paddingLeft="30dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="个人相册"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/img_cricle1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:id="@+id/img_cricle2" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:id="@+id/img_cricle3"/>

            </LinearLayout>


            <Button
                android:id="@+id/button_startchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/text_blue"
                android:layout_marginBottom="15dp"
                android:text="发消息"
                android:textSize="20sp" />
            <Button
                android:id="@+id/button_details_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/text_blue"
                android:text="加为好友"
                android:textSize="20sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
