<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_blue"
    tools:context="com.example.administrator.pigeon.DetailsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/img_details_avatar"/>
        <TextView
            android:id="@+id/text_details_name"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="150dp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:hint="喜洋洋"
            android:gravity="center"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="220dp"
            android:paddingTop="20dp"
            android:background="@color/bg_gray2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:text="个人相册"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_cricle1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:background="@color/bg_gray2"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:id="@+id/img_cricle2"
                    android:background="@color/bg_gray2"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="3dp"
                    android:id="@+id/img_cricle3"
                    android:background="@color/bg_gray2"/>

            </LinearLayout>


            <Button
                android:id="@+id/button_startchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/sign_button"
                android:layout_marginBottom="15dp"
                android:text="发消息"
                android:textSize="18sp" />
            <Button
                android:id="@+id/button_details_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/sign_button"
                android:text="加为好友"
                android:textSize="18sp" />
            <Button
                android:id="@+id/button_details_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/sign_button"
                android:text="删除好友"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
