<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/bg_gray"/>

            <LinearLayout
                android:id="@+id/layout_tocircle"
                android:background="@color/white"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/v1"
                    android:layout_width="27dp"
                    android:layout_height="27dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="朋友圈" />
            </LinearLayout>

            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"/>

            <LinearLayout
                android:id="@+id/layout_scan"
                android:background="@color/white"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/v2" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="扫一扫" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>

            <LinearLayout
                android:id="@+id/shake"
                android:background="@color/white"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/v3"
                    android:layout_width="27dp"
                    android:layout_height="27dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="摇一摇" />
            </LinearLayout>

            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"/>

            <LinearLayout
                android:id="@+id/nearby"
                android:background="@color/white"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/v4"
                    android:layout_width="27dp"
                    android:layout_height="27dp" />

                <TextView
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="附近的人"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>

            <LinearLayout
                android:id="@+id/drift_bottle"
                android:background="@color/white"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/v5" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="漂流瓶" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/bg_gray" />

            <LinearLayout
                android:id="@+id/shopping"
                android:background="@color/white"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/v6" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="购物" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>

            <LinearLayout
                android:id="@+id/game"
                android:background="@color/white"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/v7"
                    android:layout_width="27dp"
                    android:layout_height="27dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="游戏" />
            </LinearLayout>

            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"/>

            <LinearLayout
                android:id="@+id/applet"
                android:background="@color/white"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/v15"
                    android:layout_width="27dp"
                    android:layout_height="27dp" />

                <TextView
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="小程序"/>
            </LinearLayout>
            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>