<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/bar_grey">

        <ImageView
            android:id="@+id/changeback_img"
            android:src="@drawable/ac_back_icon"
            android:layout_width="48dp"
            android:layout_height="match_parent" />

        <View
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="24dp"/>

        <TextView
            android:enabled="false"
            android:textSize="20sp"
            android:textColor="#ececec"
            android:layout_marginLeft="12dp"
            android:gravity="center|left"
            android:text="更改名字"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:enabled="false"
            android:id="@+id/savenewname_btn"
            android:text="保存"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#00ff00"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <EditText
            android:id="@+id/changenickname_et"
            android:textCursorDrawable="@drawable/changeshape"
            android:text="                                                                                                                                                                                 "
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#00ff00"/>
        <TextView
            android:text="好名字可以让你的朋友更容易记住你。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
