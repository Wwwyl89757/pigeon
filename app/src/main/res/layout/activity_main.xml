<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    tools:context="com.example.administrator.pigeon.MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:padding="3dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_chat"
            style="@style/RadioButtonBottomTab"
            android:checked="true"
            android:drawableTop="@drawable/icon_chat_sel"
            android:textSize="10sp"
            android:text="通讯录" />

        <RadioButton
            android:id="@+id/rb_conver"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_conver_sel"
            android:textSize="10sp"
            android:text="消息" />

        <RadioButton
            android:id="@+id/rb_zone"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_zone_sel"
            android:textSize="10sp"
            android:text="朋友圈" />


        <RadioButton
            android:drawableTop="@drawable/icon_selfinfo_sel"
            android:id="@+id/rb_user"
            style="@style/RadioButtonBottomTab"
            android:textSize="10sp"
            android:text="个人中心" />
    </RadioGroup>


</LinearLayout>
